UC_Start .> UC_ApplyTheme : <<include>>
UC_Play .> UC_Feedback : <<include>>
UC_Play .> UC_Progress : <<include>>
UC_Finish .> UC_Progress : <<include>>
UC_Restart .> UC_Start : <<include>>

