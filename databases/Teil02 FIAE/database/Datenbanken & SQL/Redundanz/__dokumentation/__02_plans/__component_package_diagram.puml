left to right direction
skinparam packageStyle rectangle
skinparam componentStyle rectangle
skinparam shadowing false

package "Ordner: Redundanz" as Scope {
  component "HTML Entry\n_ghtml_space_waster.html" as HTML
  component "Game-Logik (JS)\n_gjs_space_waster.js" as JS
  component "Styles (CSS)\n_gcss_space_waster.css" as CSS
  component "Shared Scripts\n/__admin_dont_push/theme_bridge.js" as SHAREDJS
  package "Ressourcen" as RES {
    database "_data/\n3 Dateien" as DATA
    folder "_assets/\n0 Dateien" as ASSETS
  }
  package "Dokumentation" as DOC {
    folder "__dokumentation/__02_plans" as PLAN
  }
}

