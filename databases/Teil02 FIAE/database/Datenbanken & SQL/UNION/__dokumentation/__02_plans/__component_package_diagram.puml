title Komponenten-/Package-Diagramm: UNION Compatibility // Fusion Reactor
left to right direction
skinparam packageStyle rectangle
skinparam componentStyle rectangle
skinparam shadowing false

package "Ordner: UNION" as Scope {
  component "HTML Entry\n_ghtml_union_compat.html" as HTML
  component "Game-Logik (JS)\n_gjs_union_compat.js" as JS
  component "Styles (CSS)\n_gcss_union_compat.css" as CSS
  component "Shared Scripts\n/__admin_dont_push/theme_bridge.js" as SHAREDJS
  component "Externe Styles\nhttps://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=swap" as EXTCSS
  package "Ressourcen" as RES {
    database "data/\n3 Dateien" as DATA
    folder "assets/\n0 Dateien" as ASSETS
  }
  package "Dokumentation" as DOC {
    folder "__dokumentation/__02_plans" as PLAN
  }
}

