                    "x": 50,
                    "y": 100,
                    "columns": [
                        {
                            "name": "ID",
                            "type": "INT",
                            "isPK": true
                        },
                        {
                            "name": "Username",
                            "type": "VARCHAR(50)",
                            "isPK": false
